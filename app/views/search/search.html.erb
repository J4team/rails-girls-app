<!-- app/views/ideas/search.html.erb -->
<center><%= form_with url: search_search_path, method: :get, local: true do %>
  <%= text_field_tag :query, params[:query] %>
  <%= submit_tag "検索" %>
<% end %>


<h1>検索結果</h1>
</center>
<ul>
    <div class="list-group w-auto">
        <% @ideas.each do |idea| %>
            <li><%= idea.name %>: <%= idea.description %></li>
        <% end %>
    </div>
</ul>
